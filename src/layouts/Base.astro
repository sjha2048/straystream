---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import SnakeBackground from '@/components/SnakeBackground.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedDate?: string;
  showSnakeBackground?: boolean;
}

const { title, description, image, article, publishedDate, showSnakeBackground = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      article={article}
      publishedDate={publishedDate}
    />
    <script is:inline>
      // Dark mode - runs before page renders to prevent flash
      const theme = localStorage.getItem('theme');
      if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-white dark:bg-neutral-950 text-neutral-900 dark:text-neutral-100 transition-colors">
    {showSnakeBackground && <SnakeBackground />}
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
