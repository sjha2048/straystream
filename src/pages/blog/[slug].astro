---
import { getCollection, render } from 'astro:content';
import Base from '@/layouts/Base.astro';

export async function getStaticPaths() {
  let posts: any[] = [];
  try {
    posts = await getCollection('posts');
  } catch {
    return [];
  }
  // id is like "test/index" - extract folder name as slug
  return posts.map((post) => ({
    params: { slug: post.id.split('/')[0] },
    props: { post },
  }));
}

const { post } = Astro.props;
const { title, excerpt, publishedDate, coverImage } = post.data;

// Render the markdoc content
const { Content } = await render(post);
let contentHtml = '';
try {
  // For reading time calculation, use the raw body
  contentHtml = post.body || '';
} catch {
  contentHtml = '';
}

const formattedDate = new Date(publishedDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calculate reading time from content
const wordCount = contentHtml.split(/\s+/).length ?? 0;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

<Base
  title={`${title} | Blog | straystream`}
  description={excerpt}
  image={coverImage ?? undefined}
  article={true}
  publishedDate={publishedDate}
>
  <article class="container-narrow py-16">
    <!-- Back link -->
    <a href="/blog" class="inline-flex items-center text-sm text-neutral-500 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors mb-8">
      &larr; All posts
    </a>

    <!-- Header -->
    <header class="mb-12">
      {coverImage && (
        <img
          src={coverImage}
          alt=""
          class="w-full aspect-[2/1] object-cover rounded-lg mb-8"
        />
      )}
      <div class="flex items-center gap-3 text-sm text-neutral-500 dark:text-neutral-400">
        <time datetime={publishedDate}>{formattedDate}</time>
        <span>&middot;</span>
        <span>{readingTime} min read</span>
      </div>
      <h1 class="mt-4 text-4xl font-bold text-neutral-900 dark:text-neutral-100 tracking-tight">{title}</h1>
      <p class="mt-4 text-xl text-neutral-600 dark:text-neutral-400">{excerpt}</p>
    </header>

    <!-- Content -->
    <div class="prose prose-neutral dark:prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <!-- Footer -->
    <footer class="mt-16 pt-8 border-t border-neutral-200 dark:border-neutral-800">
      <a href="/blog" class="text-neutral-500 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors">
        &larr; Back to all posts
      </a>
    </footer>
  </article>
</Base>
