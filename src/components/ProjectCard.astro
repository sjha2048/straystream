---
interface Props {
  title: string;
  slug: string;
  tagline?: string;
  techStack?: string[];
  projectLink?: string | null;
  coverImage?: string | null;
}

const { title, slug, tagline, techStack = [], projectLink, coverImage } = Astro.props;
---

<article class="group border border-neutral-200 rounded-lg overflow-hidden hover:border-neutral-300 transition-colors">
  {coverImage && (
    <div class="aspect-video overflow-hidden bg-neutral-100">
      <img
        src={coverImage}
        alt=""
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
        decoding="async"
      />
    </div>
  )}
  <div class="p-5">
    <h3 class="font-semibold text-neutral-900">
      <a href={`/projects/${slug}`} class="hover:text-neutral-600 transition-colors">
        {title}
      </a>
    </h3>
    {tagline && (
      <p class="mt-1 text-sm text-neutral-600">{tagline}</p>
    )}
    {techStack.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-1.5">
        {techStack.map((tech) => (
          <span class="px-2 py-0.5 text-xs bg-neutral-100 text-neutral-600 rounded">
            {tech}
          </span>
        ))}
      </div>
    )}
    <div class="mt-4 flex items-center gap-3 text-sm">
      <a href={`/projects/${slug}`} class="text-neutral-900 font-medium hover:text-neutral-600 transition-colors">
        View details &rarr;
      </a>
      {projectLink && (
        <a
          href={projectLink}
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-neutral-900 transition-colors"
        >
          Live site
        </a>
      )}
    </div>
  </div>
</article>
