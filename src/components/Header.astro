---
const pathname = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return pathname === '/';
  }
  return pathname.startsWith(href);
}
---

<header class="py-8">
  <nav class="container-wide flex items-center justify-between">
    <a href="/" class="text-lg font-semibold text-neutral-900 hover:text-neutral-600 transition-colors">
      straystream
    </a>

    <ul class="flex items-center gap-6 text-sm">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              'transition-colors',
              isActive(item.href)
                ? 'text-neutral-900 font-medium'
                : 'text-neutral-500 hover:text-neutral-900',
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
